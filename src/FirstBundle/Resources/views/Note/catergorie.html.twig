<html>
<head>
    <title>Liste de catégories</title>
    {% for flashMessage in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
</head>
<body>
    <h1>Liste de catégories</h1>
    <a href="{{ path('home') }}">
        <button type="button" name="back">Retour</button>
    </a>
    <a href="{{ path('newCategorie') }}">
        <button type="button" name="add_cat">Ajouter une catégorie</button>
    </a>

    {% for categorie in categories %}
        <div class='categorie' id="{{categorie.id}}">
            <div class="title">{{categorie.name}}</div>
            <a href="{{ path('deleteCategorie', {'id' :categorie.id}) }}">
                <button type="button" name="del_cat">Supprimer la catégorie</button>
            </a>
            <a href="{{ path('modifyCategorie', {'id' :categorie.id}) }}">
                <button type="button" name="modif_cat">Modifier la catégorie</button>
            </a>
        </div>
    {% endfor %}
</body>

</html>
