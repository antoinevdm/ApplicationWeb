<html>
<head>
    <title>Liste de catégories</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    {% for flashMessage in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
</head>
<body>
    <div class="container">
        <h1>Liste de catégories</h1>
        <a href="{{ path('newCategorie') }}">
            <button type="button" class="btn btn-primary">Ajouter une catégorie</button>
        </a>
        <br></br>
        {% for categorie in categories %}
            <div class='well well-lg' id="{{categorie.id}}">
                <legend><b>{{categorie.name}}</b></legend>
                <a href="{{ path('deleteCategorie', {'id' :categorie.id}) }}">
                    <button type="button" class="btn btn-primary">Supprimer la catégorie</button>
                </a>
                <a href="{{ path('modifyCategorie', {'id' :categorie.id}) }}">
                    <button type="button" class="btn btn-primary">Modifier la catégorie</button>
                </a>
            </div>
        {% endfor %}
        <a href="{{ path('home') }}">
            <button type="button" class="btn btn-primary">Retour</button>
        </a>

    </div>
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
</body>

</html>
